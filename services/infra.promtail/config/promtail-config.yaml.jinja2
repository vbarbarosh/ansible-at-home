server:
  disable: true

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://home.grafana:3100/loki/api/v1/push

scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      host: {{ inventory_hostname }}
      promtail: {{ inventory_hostname }}
      __path__: /var/log/*log
